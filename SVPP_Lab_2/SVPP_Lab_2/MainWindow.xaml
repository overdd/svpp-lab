<Window x:Class="SVPP_Lab_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SVPP_Lab_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="CalculatorMainField"  Width="350" Height="400" >
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBox x:Name="DisplayField" Width="330" Height="40" Margin="5" FontSize="18" Grid.Column="0" Grid.ColumnSpan="5" Grid.RowSpan="2" HorizontalContentAlignment="Center">Довольны ли Вы своей ЗП?</TextBox>
        <Button Grid.Column="1" Grid.Row="6" Margin="10" Click="Button_MessageBox">Yes</Button>
        <Button x:Name="NoButton" Grid.Column="3" Grid.Row="6" Margin="10" MouseEnter="Button_Run">No</Button>
    </Grid>
</Window>
